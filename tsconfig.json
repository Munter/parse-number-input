{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "unexpected": ["typings/unexpected"]
    }
  },
  "include": ["./src/**/*.ts", "./typings/*.d.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts"],
  "compileOnSave": false
}
